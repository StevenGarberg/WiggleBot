@inherits LayoutComponentBase

<MudThemeProvider IsDarkMode="@_isDarkMode" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => ToggleDrawerOpened())" />
        <MudText Typo="Typo.h5" Class="ml-3">AR Club Dashboard</MudText>
        <MudSpacer />
        <MudToggleIconButton @bind-Toggled="@IsDarkMode"
                             Icon="@Icons.Material.Filled.DarkMode" Color="@Color.Warning"
                             ToggledIcon="@Icons.Material.Filled.LightMode" ToggledColor="Color.Warning"/>
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2">
        <MyNavMenu/>
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Medium" Style="margin-top: 20px;">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>
